<% @todos.each do |todo| %>

    <div class="row">
        <div class="col-md-10 my-2", style="top:60px ; left:20px">
            <div class="card card-body bg-light">
                <p> <%= todo.description %> </p>
                <% if todo.completed? %>
                    <ul> <%= "Completado" %> </ul>
                    <% else !todo.completed? %>
                    <ul> <%= "Incompleto" %> </ul>
                <% end %>
                <div class="col-md-5">
                    <%= link_to 'Ver', todo, class: 'btn btn-primary' %>
                    <%= link_to 'Editar', edit_path(todo), class: 'btn btn-success' %>
                    <%= link_to 'Borrar', todo, method: :delete, class: 'btn btn-danger'  %>

                </div>
            </div>
            
        </div>  
    </div>

<% end %>

